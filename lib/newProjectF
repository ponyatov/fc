dotnet new sln -o fc && mv fc/* ./ ; rm -rf fc

mkdir bin doc lib inc src tmp ref

mkdir .vscode
touch .vscode/tasks.json .vscode/extensions.json .vscode/settings.json .vscode/c_cpp_properties.json

echo '*~'          >  .gitignore
echo '*.log'       >> .gitignore
echo '*.exe'       >> .gitignore
echo '/docs/'      >> .gitignore
echo '/obj/'       >> .gitignore
echo '!.gitignore' >> .gitignore

echo '*'            >  bin/.gitignore
tail -n1 .gitignore >> bin/.gitignore
tail -n1 .gitignore >  doc/.gitignore
tail -n1 .gitignore >  lib/.gitignore
tail -n1 .gitignore >  inc/.gitignore
tail -n1 .gitignore >  src/.gitignore
echo '*'            >  bin/.gitignore
tail -n1 .gitignore >> tmp/.gitignore
echo '*'            >  bin/.gitignore
tail -n1 .gitignore >> ref/.gitignore


dotnet new console -lang "F#" -o $(MODULE)
dotnet new tool-manifest
