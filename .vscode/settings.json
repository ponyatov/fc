{
    "multiCommand.commands": [
        { "command": "multiCommand.f11",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make format \u000D"}}]},
        { "command": "multiCommand.f12",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make test \u000D"}}]}
    ],

    // files
    "files.exclude": {
        "docs/**": true,
        ".vscode/*.log": true,
        "bin/*python*":true, "bin/pip*": true, "bin/?ctivate*": true,
        "include":true, "lib64":true, "lib/python*": true,
        "bin/jupyter*":true, "lib/.ipynb_checkpoints": true,
    },
    "files.watcherExclude": {
        "docs/**": true,
        "ref/**": true,
    },
    "files.associations": {
        "ini": "fini"
    },

    // editor
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80],
    "workbench.tree.indent": 24,
    "explorer.autoReveal": false,
    "files.insertFinalNewline": true,
    "git.enabled": false,

    // clang-format
    "clang-format.executable":    "clang-format",
    "clang-format.fallbackStyle": "Google",
    "clang-format.style":         "file",

    // C++
    "[c,cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave":     true
    },
    "C_Cpp.intelliSenseEngine":    "Tag Parser",

}
